<script type="text/javascript">
    var count = 0;
    var currentPage = 1;
    var pageSize = 5;

    $(document).ready(function () {
        BindCategory();
        BindCategoryforDD();
        loadSubCategories(1);

        $('#btnSearch').click(function () {
            loadSubCategories(1);
        });


            $('#btnReset').click(function () {
                $('#ddlCategoryIds').val(null).trigger('change');
                $('#txtSubCategory').val('');
                $('#txtfromDate').val('');
                $('#toDate').val('');
                $('#ddlStatus').val('');
                loadSubCategories(1);
            });

    });

    $(document).on('click', '#btnAddSubCategory', function () {
        openModalForAdd();
    });

    $(document).on('click', '#btnSaveOrUpdate', function () {
        submitSaveOrUpdate();
    });

    $(document).on('click', '.btn-edit', function () {
        var id = $(this).data('id');
        openModalForEdit(id);
    });

    $(document).on('click', '.btn-delete', function () {
            var id = $(this).data('id');
            if (!confirm('Are you sure you want to delete this sub-category?')) return;
            $.post('@Url.Action("Delete", "Business")', { id: id }, function (res) {
                if (res.Success) {
                    alert('Deleted successfully.');
                    loadSubCategories(currentPage);
                } else {
                    alert('Delete failed: ' + (res.Message || ''));
                }
            });
        });



    function formatUserSelection(user) {
        return user.text;
    }

    function BindCategory() {
        $.ajax({
            url: '/Business/GetCategoryForDropdown',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                if (data && data.length > 0) {
                    $('#ddlCategoryIds').empty();
                    $.each(data, function (i, item) {
                        const optionHtml = `
                        <option value="${item.Id}">
                            ${item.Text}
                        </option>`;
                        $('#ddlCategoryIds').append(optionHtml);
                    });

                    // Initialize Select2 with images
                    $('#ddlCategoryIds').select2({
                        templateSelection: formatUserSelection
                    });
                }
            },
            error: function (xhr) {
                console.error('Error loading users:', xhr);
            }
        })
    }

    function BindCategoryforDD() {
        $.ajax({
            url: '/Business/GetCategoryForDropdown',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                if (data && data.length > 0) {
                    $('#ddlCategoryName').empty();
                    $.each(data, function (i, item) {
                        const optionHtml = `
                    <option value="${item.Id}">
                        ${item.Text}
                    </option>`;
                        $('#ddlCategoryName').append(optionHtml);
                    });
                }
            },
            error: function (xhr) {
                console.error('Error loading users:', xhr);
            }
        })
    }

     function loadSubCategories(pageIndex) {
        currentPage = pageIndex;
        var categoryIds = $('#ddlCategoryIds').val() ? $('#ddlCategoryIds').val().join(',') : null;
        var subCategoryName = $('#txtSubCategory').val();
        var status = $('#ddlStatus').val(); // "Active"/"Inactive" or empty

        $.ajax({
            url: '@Url.Action("GetSubCategories", "Business")',
            data: {
                categoryIds: categoryIds,
                subCategoryName: subCategoryName,
                status: status,
                pageIndex: pageIndex,
                pageSize: pageSize
            },
            dataType: 'json',
            success: function (res) {
                renderTable(res.Data);
                var totalPages = Math.ceil(res.TotalCount / pageSize);
                renderPagination(currentPage, totalPages);
            },
            error: function (err) {
                alert('Error fetching data.');
            }
        });
    }

    function renderTable(rows) {
        var $tbody = $('#tblUserData');
        $tbody.empty();
        if (!rows || rows.length === 0) {
            $tbody.html('<tr><td colspan="5" class="text-center">No records found</td></tr>');
            return;
        }

        $.each(rows, function (i, r) {
            var statusBadge = r.IsActive ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-danger">Inactive</span>';
            var tr = '<tr>';
            tr += '<td>' + r.SrNo + '</td>';
            tr += '<td>' + escapeHtml(r.CategoryName) + '</td>';
            tr += '<td>' + escapeHtml(r.SubCategoryName) + '</td>';
            tr += '<td>' + statusBadge + '</td>';
            tr += '<td>';
            tr += '<a href="javascript:void(0);" class="btn btn-icon btn-sm btn-info btn-edit" data-id="' + r.SubCategoryId + '"><i class="ri-edit-line"></i></a> ';
            tr += '<a href="javascript:void(0);" class="btn btn-icon btn-sm btn-danger btn-delete" data-id="' + r.SubCategoryId + '"><i class="ri-delete-bin-line"></i></a>';
            tr += '</td>';
            tr += '</tr>';
            $tbody.append(tr);
        });
    }

    function renderPagination(currentPage, totalPages) {
        var $container = $('#paginationContainer');
        $container.empty();
        if (totalPages <= 1) return;

        var html = '<nav><ul class="pagination pagination-sm mb-0">';
        if (currentPage === 1) html += '<li class="page-item disabled"><a class="page-link">Previous</a></li>';
        else html += '<li class="page-item"><a class="page-link" href="#" data-page="' + (currentPage - 1) + '">Previous</a></li>';

        var start = Math.max(1, currentPage - 2);
        var end = Math.min(totalPages, currentPage + 2);
        if (start > 1) html += '<li class="page-item"><a class="page-link" href="#" data-page="1">1</a></li>';
        if (start > 2) html += '<li class="page-item disabled"><a class="page-link">...</a></li>';

        for (var i = start; i <= end; i++) {
            if (i === currentPage) html += '<li class="page-item active"><a class="page-link" href="#">' + i + '</a></li>';
            else html += '<li class="page-item"><a class="page-link" href="#" data-page="' + i + '">' + i + '</a></li>';
        }

        if (end < totalPages - 1) html += '<li class="page-item disabled"><a class="page-link">...</a></li>';
        if (end < totalPages) html += '<li class="page-item"><a class="page-link" href="#" data-page="' + totalPages + '">' + totalPages + '</a></li>';

        if (currentPage === totalPages) html += '<li class="page-item disabled"><a class="page-link">Next</a></li>';
        else html += '<li class="page-item"><a class="page-link" href="#" data-page="' + (currentPage + 1) + '">Next</a></li>';

        html += '</ul></nav>';
        $container.html(html);

        // handle page clicks
        $container.find('a.page-link[data-page]').off('click').on('click', function (e) {
            e.preventDefault();
            var p = parseInt($(this).data('page'));
            if (!isNaN(p)) loadSubCategories(p);
        });
    }

    // Open modal for Add
    function openModalForAdd() {
        $('#hdnSubCategoryId').val('');
        $('#ddlCategoryName').val('').trigger('change');
        $('#txtSubCategoryName').val('');
        $('#ddlStatusModal').closest('div').hide(); // hide status in Add
        $('#txtTxnDet').text('Add'); // optional text change
        $('#btnSaveOrUpdate').text('Save');
        $('#SubCategoryMgmt').modal('show');
    }

    // Open modal for Edit
    function openModalForEdit(id) {
        $.getJSON('@Url.Action("GetSubCategoryById", "Business")', { id: id }, function (res) {
            if (!res || !res.SubCategoryId) {
                alert('Record not found');
                return;
            }
            $('#hdnSubCategoryId').val(res.SubCategoryId);
            $('#ddlCategoryName').val(res.CategoryId);
            $('#txtSubCategoryName').val(res.SubCategoryName);
            $('#ddlStatusModal').val(res.IsActive ? '1' : '0');
            $('#ddlStatusModal').closest('div').show(); // show status in update
            $('#txtTxnDet').text('Update'); // optional text change
            $('#btnSaveOrUpdate').text('Update');
            $('#SubCategoryMgmt').modal('show');
        }).fail(function () {
            alert('Failed to load record.');
        });
    }

    function submitSaveOrUpdate() {
        var id = $('#hdnSubCategoryId').val();
        var categoryId = $('#ddlCategoryName').val();
        var subCategoryName = $('#txtSubCategoryName').val();
        var isActive = null;
        if ($('#ddlStatusModal').is(':visible')) {
            isActive = $('#ddlStatusModal').val();
        }

        if (!categoryId) { alert('Please select Category'); return; }
        if (!subCategoryName || subCategoryName.trim().length === 0) { alert('Enter Sub Category'); return; }

        $.post('@Url.Action("Save", "Business")',
            {
                subCategoryId: id ? id : 0,
                categoryId: categoryId,
                subCategoryName: subCategoryName,
                isActive: isActive !== null ? isActive : null
            },
            function (res) {
                if (!res) { alert('No response'); return; }
                if (res.Success) {
                    $('#SubCategoryMgmt').modal('hide');
                    loadSubCategories(currentPage);
                    alert('Saved successfully.');
                } else {
                    alert('Save failed: ' + (res.Message || ''));
                }
            }, 'json')
            .fail(function (xhr) {
                var msg = xhr.responseText || 'Error saving';
                alert(msg);
            });
    }

    // utility
    function escapeHtml(text) {
        if (!text) return '';
        return text.replace(/[\"&'\/<>]/g, function (a) {
            return {
                '"': '&quot;', '&': '&amp;', "'": '&#39;', '/': '&#47;', '<': '&lt;', '>': '&gt;'
            }[a];
        });
    }

</script>



